<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2025-06-16-insert-languages-from-csv" author="Rik Peeters" context="test" labels="dev">
        <loadData
                file="db/changelog/changes/data/languages.csv"
                separator=";"
                tableName="language">
            <column name="code" type="STRING"/>
            <column name="name" type="STRING"/>
        </loadData>
    </changeSet>

    <changeSet id="insert-initial-roles" author="AI Assistant">
        <insert tableName="role">
            <column name="name" value="ROLE_USER"/>
        </insert>
        <insert tableName="role">
            <column name="name" value="ROLE_ADMIN"/>
        </insert>
        <insert tableName="role">
            <column name="name" value="ROLE_PREMIUM"/>
        </insert>
    </changeSet>
</databaseChangeLog>