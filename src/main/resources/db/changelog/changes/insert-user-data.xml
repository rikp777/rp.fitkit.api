<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2025-06-16-insert-test-users-from-csv" author="Rik Peeters" context="test" labels="dev">
        <loadData
                file="db/changelog/changes/data/user/users.csv"
                separator=";"
                tableName="app_user">
            <column name="id" type="STRING"/>
            <column name="username" type="STRING"/>
            <column name="email" type="STRING"/>
            <column name="password_hash" type="STRING"/>
            <column name="date_joined" type="DATE"/>
        </loadData>
    </changeSet>

    <changeSet id="2025-08-30-insert-user-roles" author="Rik Peeters" context="test" labels="dev">
        <loadData
                file="db/changelog/changes/data/user/user_roles.csv"
                separator=";"
                tableName="user_role">
            <column name="user_id" type="STRING"/>
            <column name="role_name" type="STRING"/>
        </loadData>
    </changeSet>


